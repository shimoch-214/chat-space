.left-contents
  .left-header
    .left-header__user-name
      = current_user.name
    .left-header__gadgets
      =link_to new_group_path do
        = fa_icon 'pencil-square-o', class: "left-header__gadgets--gadget"
      =link_to edit_user_registration_path, method: :get do
        = fa_icon 'cog', class: "left-header__gadgets--gadget"
  .left-groups
    - groups.each do |group|
      = link_to group_messages_path(group), class: "left-groups__group" do
        .left-groups__group--name
          = group.name
      .left-groups__group--last-message test